extends layout

block content
  h1= title
  p Welcome to #{title}
  form(action="chat", method="get")
    div(class="form-control")
      label(for="username") Username 
      input(type="text" name="username" id="username" required)
    div(class="form-control")
      label(for="room") Room
      select(name="room" id="room")
        option(value="Room_1") Room_1   
        option(value="Room_2") Room_2   
        option(value="Room_3") Room_3  
        option(value="Room_4") Room_4
    div(class="form-control")
      button(type="submit" id="button") Enter room  
